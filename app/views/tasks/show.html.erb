<div data-controller="task"
     data-task-id-value="<%= @task.id %>"
     data-task-completed-value="<%= @task.completed %>"
     class="max-w-xl mx-auto space-y-4">
  <h1 class="text-2xl font-bold flex items-center">
    <span data-task-target="icon" class="mr-2"><%= @task.completed ? "✅" : "⬜" %></span>
    <%= @task.title %>
  </h1>
  <p><%= @task.details %></p>
  <p data-task-target="status">
    <%= @task.completed ? "✅ This task is completed" : "❌ This task is not completed yet" %>
  </p>
  <button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 btn-toggle" data-action="task#toggle">Toggle Completion</button>
</div>

<div class="mt-4">
  <%= link_to "Back to list", tasks_path, class: "text-blue-600 hover:underline mr-2" %>
  <%= link_to "Edit", edit_task_path(@task), class: "text-blue-600 hover:underline mr-2" %>
  <%= link_to "Delete", task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:underline" %>
</div>
