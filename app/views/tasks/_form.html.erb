<%= form_with(model: task) do |form| %>
  <% if task.errors.any? %>
    <div class="mb-4 rounded bg-red-100 p-4">
      <h2 class="font-bold mb-2"><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul class="list-disc pl-5 text-sm">
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= form.label :title, class: "block font-medium" %>
    <%= form.text_field :title, class: "mt-1 block w-full border-gray-300 rounded" %>
  </div>

  <div class="mb-4">
    <%= form.label :details, class: "block font-medium" %>
    <%= form.text_area :details, class: "mt-1 block w-full border-gray-300 rounded" %>
  </div>

  <div class="mb-4 flex items-center">
    <%= form.check_box :completed, class: "mr-2" %>
    <%= form.label :completed %>
  </div>

  <%= form.submit class: "px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700" %>
<% end %>
