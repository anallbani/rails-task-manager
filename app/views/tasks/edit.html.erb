<div class="max-w-2xl mx-auto bg-white dark:bg-gray-800 p-6 rounded shadow-md">
  <h2 class="text-2xl font-bold mb-4">Edit Task</h2>

  <%= form_with(model: @task, local: true) do |form| %>
    <div class="space-y-4">
      <div>
        <%= form.label :title, class: "block font-semibold mb-1" %>
        <%= form.text_field :title, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-900 text-black dark:text-white" %>
      </div>

      <div>
        <%= form.label :details, class: "block font-semibold mb-1" %>
        <%= form.text_area :details, rows: 4, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-900 text-black dark:text-white" %>
      </div>

      <div class="flex items-center">
        <%= form.check_box :completed, class: "mr-2" %>
        <%= form.label :completed %>
      </div>

      <div>
        <%= form.label :due_date, class: "block font-semibold mb-1" %>
        <%= form.date_field :due_date, class: "w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded bg-white dark:bg-gray-900 text-black dark:text-white" %>
      </div>

      <div class="flex space-x-4 mt-4">
        <%= form.submit "Update Task", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition" %>
        <%= link_to "Back", tasks_path, class: "text-gray-600 dark:text-gray-300 hover:underline" %>
      </div>
    </div>
  <% end %>
</div>
